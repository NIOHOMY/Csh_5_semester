@model WebApplication1.Models.Publisher

@{
    ViewData["Title"] = "Удаление";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/additional_styles.css">
</head>
<h3 class="text-center">Вы уверены что хотите удалить издательство?</h3>
<div class="text-center">
    <h4>Издательство</h4>
    <hr />
    <dl class="row">
        
        <dd class = "col-sm-10" style="margin-left: 8%">
            <b>@Html.DisplayNameFor(model => model.NameOfPublisher)</b>
            @Html.DisplayFor(model => model.NameOfPublisher)
        </dd>
        
        <dd class = "col-sm-10" style="margin-left: 8%">
            <b>@Html.DisplayNameFor(model => model.City)</b>
            @Html.DisplayFor(model => model.City)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PublisherId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
