@model WebApplication1.Models.Author

@{
    ViewData["Title"] = "Детальная информация";
}

@* <h1>Детальная информация</h1>
 *@
<div>
    <h4>Автор</h4>
    <hr />
    <dl class="row">
        @* <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt> *@
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @* <dt>
            img
        <dt> *@
        <dd>
            <img src="@Url.Action("GetImage", "Authors", new { id = Model.AuthorId@*, width = 100, height = 100 *@, random = DateTime.Now.Ticks  })" alt="Book Image" style="width: 250px; height: 300px;" />
        </dd>
        <dt class="col-sm-2">
                Информация
        </dt>
        <dd class="col-sm-10">
            <p> @(@Model.Info != null ? @Model.Info : "") </p>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.AuthorId">Редактировать</a> |
    <a asp-action="Index">Назад</a>
</div>
