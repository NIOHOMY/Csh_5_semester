@model WebApplication1.Models.Author

@{
    ViewData["Title"] = "Удаление";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/additional_styles.css">
</head>
@* <h1>Delete</h1> *@

<h3>Уверены что хотите удалить автора?</h3>
<div>
    <h4>Автор</h4>
    <hr />
    <dl class="row">
        <dd>
            <img src="@Url.Action("GetImage", "Authors", new { id = @Model.AuthorId@*, width = 100, height = 100 *@, random = DateTime.Now.Ticks  })"
                 alt="Book Image" style="width: 290px; height: 350px; max-width: 290px; max-height: 350px;min-width: 290px; min-height: 350px;
        margin-right: 20px; border-radius: 35%;" />
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AuthorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
