@model WebApplication1.Models.VMRegistration

@{
    Layout = "_Layout";
    ViewData["Title"] = "Регистрация";
}
<style>

    button {
        background-color: #4CAF50;
        color: white;
        padding: 10px;
        border: none;
        width: 20%;
        cursor: pointer;
    }

        button:hover {
            background-color: #45a049;
        }

    input {
        width: 40%;
        margin-bottom: 10px;
        padding: 8px;
        box-sizing: border-box;
    }
</style>
<!DOCTYPE html>

<html>
<head>
   
        <link rel="stylesheet" type="text/css" href="~/css/additional_styles.css">
    
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" >Зарегестрироваться</a>
        </li>
    </ul>
</head>
<body style="text-align: center; align-items: center; justify-content: center; ">
    
        <form asp-controller="Access" asp-action="Register" method="post">
        <h1>Регистрация</h1>
        <input placeholder="Имя" asp-for="FirstName" />
            <br>
        <input placeholder="Фамилия" asp-for="LastName" />
            <br>

        <input placeholder ="Отчество (не обязательно)" asp-for="Patronymic" />
            <br>

        <input placeholder="Адресс" asp-for="Address" />
            <br>

        <input placeholder="Номер телефона +7 или 8" asp-for="PhoneNumber" />
            <br>

        <input placeholder="Почта/Логин" asp-for="Email" />
            <br>

        <input placeholder="Пароль" asp-for="Password" />
            <br>

            <button type="submit">Зарегестрироваться</button>
            <br>
        </form>
        

</body>
</html>
