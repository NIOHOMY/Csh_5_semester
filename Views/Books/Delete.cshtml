@model WebApplication1.Models.Book

@{
    ViewData["Title"] = "Удаление";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/additional_styles.css">
</head>

<h3 class ="text-center">Уверены что хотите удалить книгу?</h3>
<div class ="text-center">
    <h4>Книга</h4>
    <hr />
    <dl class="row">
        
        <dd class = "col-sm-10" style="margin-left: 8%">
            <b>@Html.DisplayNameFor(model => model.Title)</b>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dd class = "col-sm-10" style="margin-left: 8%">
            <b>@Html.DisplayNameFor(model => model.FirstAuthor)</b>
            @Html.DisplayFor(model => model.FirstAuthor.Name)
        </dd>
        <dd class = "col-sm-10" style="margin-left: 8%">
            <b>@Html.DisplayNameFor(model => model.YearOfPublication)</b>
            @Html.DisplayFor(model => model.YearOfPublication)
        </dd>
        <dd >
            <img src="@Url.Action("GetImage", "Books", new { id = @Model.BookId@*, width = 100, height = 100 *@, random = DateTime.Now.Ticks  })"
                 alt="Book Image" style="width: 250px; height: 350px; max-width: 250px; max-height: 350px;min-width: 250px; min-height: 350px;
        border-radius: 10%; border-radius: 11px; border: 1px solid  #795548;" />
        </dd>
        <dd class = "col-sm-10" style="margin-left: 8%">
            <b>@Html.DisplayNameFor(model => model.Price)</b>
            @Html.DisplayFor(model => model.Price) руб
        </dd>
        <dd class = "col-sm-10" style="margin-left: 8%">
            <b>@Html.DisplayNameFor(model => model.NumberOfExamples)</b>
            @Html.DisplayFor(model => model.NumberOfExamples) шт
        </dd>
        <dd class = "col-sm-10" style="margin-left: 8%">
            <b>@Html.DisplayNameFor(model => model.Publisher)</b>
            @Html.DisplayFor(model => model.Publisher.City)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BookId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
