@model WebApplication1.Models.Issue

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Issue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-12">
            Issue Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IssueDate)
        </dd>
        <dt class="col-sm-12">
            Return Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class="col-sm-12">
            Reader:
        </dt>
        <dd class="col-sm-10">
            <p>@Model.Reader.FirstName @Model.Reader.LastName</p>
            <p>@Model.Reader.Patronymic</p>
            <p>@Model.Reader.Address</p>
            <p>@Model.Reader.FormattedPhoneNumber</p>
        </dd>
        <dt class="col-sm-12">
            Books:
        </dt>
        <dd class="col-sm-10">
            @foreach (var book in Model.Books)
            {
                <p>@book.Title by @(book.FirstAuthor != null ? book.FirstAuthor.Name : "Unknown Author")</p>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IssueId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
