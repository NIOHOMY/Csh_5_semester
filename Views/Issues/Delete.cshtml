@model WebApplication1.Models.Issue

@{
    ViewData["Title"] = "Удаление";
}


<h3>Вы уверены что хотите удалить выдачу?</h3>
<div>
    <h4>Выдача</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-12">
            Выдана
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IssueDate)
        </dd>
        <dt class="col-sm-12">
            Крайняя дата возврата книг
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dd>
            <p>@(Model.isСonfirmed ? "Подтверждена" : "Ожидает подтверждения")</p>
        </dd>
        <dt class="col-sm-12">
            Читатель
        </dt>
        <dd class="col-sm-10">
            <p>@Model.Reader.FirstName @Model.Reader.LastName</p>
            <p>@Model.Reader.Patronymic</p>
            <p>@Model.Reader.Address</p>
            <p>@Model.Reader.FormattedPhoneNumber</p>
        </dd>
        <dt class="col-sm-12">
            Книги
        </dt>
        <dd class="col-sm-10">
            @foreach (var book in Model.Books)
            {
                <p>@book.Title - @(book.FirstAuthor != null ? book.FirstAuthor.Name : "Неизвестный автор")</p>
            }
        </dd>
        <dt class="col-sm-12">
            Сумма
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Price) руб
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IssueId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад</a>
    </form>
</div>
