@model WebApplication1.Models.Issue

@{
    ViewData["Title"] = "Details";
}

<h1>Issue Details</h1>

<div>
    <h4>Issue Id: @Model.IssueId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-12">
            Issue Date:
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.IssueDate)
        </dd>
        <dt class="col-sm-12">
            Return Date:
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class="col-sm-12">
            Reader:
        </dt>
        <dd class="col-sm-12">
            <p>@Model.Reader.FirstName @Model.Reader.LastName</p>
            <p>@(Model.Reader.Patronymic != null ? Model.Reader.Patronymic : " ")</p>
            <p>@Model.Reader.Address</p>
            <p>@Model.Reader.FormattedPhoneNumber</p>
        </dd>
        <dt class="col-sm-12">
            Books:
        </dt>
        <dd class="col-sm-12">
            @foreach (var book in Model.Books)
            {
                <p>@book.Title - @(book.FirstAuthor != null ? book.FirstAuthor.Name : "Unknown Author")</p>
            }
        </dd>
        <dt class="col-sm-12">
            Сумма:
        </dt>
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.Price) руб
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IssueId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
