@model bool
@{
    ViewData["Title"] = "Status";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Status</title>
</head>
<body>
    <h2>Status</h2>

    <form asp-action="SaveStatus" asp-controller="Issues" method="post">
        <input type="hidden" name="id" value="@ViewData["id"]" />

        <div class="form-group">
            
            <div>
                <label>
                    <input type="radio" name="isСonfirmed" value="True" /> Подтверждено
                </label>
                <label>
                    <input type="radio" name="isСonfirmed" value="False" /> Ожидание
                </label>
            </div>
        </div>

        <button type="submit">Сохранить</button>
    </form>
</body>
</html>
