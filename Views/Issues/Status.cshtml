@model bool
@{
    ViewData["Title"] = "Статус";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
   
        <link rel="stylesheet" type="text/css" href="~/css/additional_styles.css">
    
    <meta name="viewport" content="width=device-width" />
    <title>Статус</title>
</head>
<body>@* 
    <h2>Status</h2> *@

    <form asp-action="SaveStatus" asp-controller="Issues" method="post">
        <input type="hidden" name="id" value="@ViewData["id"]" />

        <div class="form-group">
            
            <div>
                <label>
                    <input type="radio" name="isСonfirmed" value="True" /> Подтверждить
                </label>
                @if (User.IsInRole("Admin") )
                {
                    <label>
                        <input type="radio" name="isСonfirmed" value="False" /> Перевести в ожидание
                    </label>
                }
            </div>
        </div>

        <button type="submit">Сохранить</button>
    </form>
</body>
</html>
