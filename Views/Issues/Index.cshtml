@model IEnumerable<WebApplication1.Models.Issue>

@{
    ViewData["Title"] = "Выдачи";
}
<style>
    .table-container {
        margin-left: 35px;
        margin-right: 35px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table td, .table th {
            padding: 10px;
            border: 1px solid #ddd; /* добавим границу для разделения ячеек */
        }
        td{
        text-align: center;
        margin-top: 35px;
        }
        th{
        text-align: center;
        margin-top: 15px;
        }
</style>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/additional_styles.css">
</head>
<h1>Ваши выдачи</h1>
<p class ="text-center">
    <a asp-action="Create" class="text-center">Арендовать книги</a>
</p>

<form asp-controller="Issues" asp-action="Index" method="get" class="text-center">
    <label for="search">Поиск:</label>
    <input type="text" id="search" name="search" value="@ViewBag.SearchString" />
    <input type="submit" value="Поиск" />
</form>

<table class="table" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IssueId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isСonfirmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reader)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    <p>@(item.isСonfirmed? "Подтверждена": "Ожидает подтверждения")</p>
                </td>
                <td>
                    <p>@item.Reader.FirstName</p>
                    <p>@item.Reader.LastName</p>
                    <p>@item.Reader.Patronymic</p>
                    <p>@item.Reader.Address</p>
                    <p>@item.Reader.FormattedPhoneNumber</p>
                </td>
                <td>
                    @foreach (var book in item.Books)
                    {
                        <p>@book.Title - @(book.FirstAuthor != null ? book.FirstAuthor.Name : "Неизвестный автор")</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price) руб
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IssueId">Редактировать</a> 
                    <p></p>
                    <a asp-action="Details" asp-route-id="@item.IssueId">Детальная инфорамция</a> 
                    <p></p>
                    <a asp-action="Delete" asp-route-id="@item.IssueId">Удалить</a> 
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <p></p>
                        <a asp-action="Status" asp-route-id="@item.IssueId">Статус</a>
                    }
                </td>
            </tr>
        }
        <p class ="text-center">
            Показать выдачи...
            <a asp-action="Index" asp-route-filter="all">Все</a> |
            <a asp-action="Index" asp-route-filter="confirmed">Подтверждённые</a> |
            <a asp-action="Index" asp-route-filter="pending">Ожидают подтверждения</a>
        </p>

    </tbody>
</table>
